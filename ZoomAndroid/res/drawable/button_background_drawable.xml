<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape>
			<gradient android:startColor="#a6c937" android:centerColor="#a6c937"
				android:endColor="#a6c937" />
			<corners android:radius="2dp" />
			<stroke android:width="1dp" android:color="#a6c937" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#a6c937" android:centerColor="#a6c937"
				android:endColor="#a6c937" />
			<corners android:radius="2dp" />
			<stroke android:width="1dp" android:color="#a6c937" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient android:startColor="#ff0000" android:centerColor="#ff0000"
				android:endColor="#ff0000" />
			<corners android:radius="2dp" />
			<stroke android:width="1dp" android:color="#99ff0000" />
			
		</shape>
	</item>
</selector>

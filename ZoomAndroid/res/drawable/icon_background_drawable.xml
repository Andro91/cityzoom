<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape>
			<gradient 
			    android:startColor="#a6c937" 
			    android:centerColor="#a6c937"
				android:endColor="#a6c937" />
			<stroke 
			    android:width="1dp" 
			    android:color="#a6c937"/>
			<solid android:color="#AAa6c937"/>
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<gradient 
			    android:startColor="#a6c937" 
			    android:centerColor="#a6c937"
				android:endColor="#a6c937" />
			<stroke 
			    android:width="1dp" 
			    android:color="#a6c937" />
			<solid android:color="#AAa6c937"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient 
			    android:startColor="#5297d2" 
			    android:centerColor="#5297d2"
				android:endColor="#5297d2" />
			<stroke 
			    android:width="1dp" 
			    android:color="#5297d2" />
			<solid android:color="#AA5297d2"/>
		</shape>
	</item>
</selector>

